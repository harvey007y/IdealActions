}

<h2>Index</h2>
<ul>
    <li>@Html.ActionLink("Manage KnowledgeBase Categories", "Index", "KnowledgeBaseCategory")</li>
    
</ul>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
