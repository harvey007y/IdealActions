@model IEnumerable<IdealActions.Domain.ToDoEntry>

@{
    ViewBag.Title = "To Do List";
}

<h2>@ViewBag.Title</h2>
<ul>
    <li>@Html.ActionLink("Manage Strategies", "Index", "Strategy")</li>
    <li>@Html.ActionLink("Manage Tactics", "Index", "Tactic")</li>
</ul>
<p>
    @Html.ActionLink("Create New", "Create")
     <h3>To Do List Balance: @ViewBag.CheckingBalance</h3>
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ToDoDate)
        </th>
        <th>
            @Html.Label("Tactic")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionalDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ToDoDate)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.tactic.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionalDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.toDoStatus.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ToDoEntryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ToDoEntryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ToDoEntryId })
        </td>
    </tr>
}

</table>
