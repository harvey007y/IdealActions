@model IdealActions.Domain.Tactic

@{
    ViewBag.Title = "Edit Tactic";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tactic</legend>

        @Html.HiddenFor(model => model.TacticId)

        
            @Html.HiddenFor(model => model.UserName)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
         <label>Select Strategy<span style="color: red">*</span>:</label> 
                  @Html.DropDownListFor(model => model.StrategyId, new SelectList(ViewBag.StrategyList, "StrategyId", "Description"), " -- Please select strategy -- ", new { @class = "dropdown" }) 
                @Html.ValidationMessageFor(m => m.StrategyId) 

         <label>Select Abstraction Level<span style="color: red">*</span>:</label> 
                  @Html.DropDownListFor(model => model.TacticAbstractionLevelId, new SelectList(ViewBag.TacticAbstractionLevelList, "TacticAbstractionLevelId", "AbstractionLevel"), " -- Please select abstraction level -- ", new { @class = "dropdown" }) 
                @Html.ValidationMessageFor(m => m.TacticAbstractionLevelId) 

        <label>Select Account Action Type<span style="color: red">*</span>:</label> 
                  @Html.DropDownListFor(model => model.TacticAccountActionTypeId, new SelectList(ViewBag.TacticAccountActionTypeList, "TacticAccountActionTypeId", "ActionType"), " -- Please select action type -- ", new { @class = "dropdown" }) 
                @Html.ValidationMessageFor(m => m.TacticAccountActionTypeId) 
           
        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
